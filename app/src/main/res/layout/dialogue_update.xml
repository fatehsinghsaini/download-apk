<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_25sdp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        card_view:cardCornerRadius="@dimen/_6sdp"
        card_view:contentPadding="@dimen/_8sdp"
        card_view:cardElevation="@dimen/_3sdp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
                android:visibility="gone"
                android:id="@+id/img_close"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:gravity="start|center"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_width="0dp"
                card_view:srcCompat="@mipmap/crossres"
                android:textColor="@color/textColorBlack"
                android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_logo"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:gravity="start|center"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_70sdp"
                android:layout_marginLeft="@dimen/_70sdp"
                android:layout_width="0dp"
                card_view:srcCompat="@mipmap/logo"
                android:textColor="@color/textColorBlack"
                android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
                card_view:layout_constraintTop_toBottomOf="@+id/img_logo"
                android:id="@+id/txt_desc"
                style="@style/TextStyleNormal"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:text="New version of this app is available. For better user experience please update now."
                android:gravity="center"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_width="0dp"
                android:textColor="@color/textColorBlack"
                android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
                card_view:layout_constraintTop_toBottomOf="@+id/txt_desc"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/btn_update"
                style="@style/ButtonStyle"
                android:text="@string/update_now"
                android:backgroundTint="@color/colorASPrimary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
