<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_margin="@dimen/_5sdp">

    <ImageView
            android:id="@+id/cimg_user"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:src="@mipmap/cashbonus"/>
    <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="@dimen/_70sdp"
                    android:gravity="center"
                    android:background="@mipmap/cashbonusbg"
                    android:visibility="visible"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_height="@dimen/_35sdp">
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_bonusRupees"
                android:layout_gravity="center_horizontal"
                style="@style/TextStyleSemiBold"
                android:layout_marginLeft="@dimen/_8sdp"
                android:gravity="center_vertical"
                android:textSize="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"

                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
        <ImageView
                android:src="@mipmap/lockiconcopy"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignParentRight="true"

        />

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_below="@+id/txt_bonusRupees"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                style="@style/TextStyleNormal"
                android:gravity="center_vertical"
                android:textSize="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:text="@string/cash_bonus"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_InviteFriends"
            android:layout_centerHorizontal="true"
            style="@style/TextStyleLight"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/rl_head"
android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/textColorBlack"
            android:layout_height="wrap_content"/>
</RelativeLayout>


