<resources>

    <style name="ToolbarTitleStyle">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <!--<item name="android:fontFamily">@font/faktpro_semibold</item>-->
    </style>

    <style name="TextInputHint" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="EditTextLabel" parent="Theme.AppCompat.DayNight">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColorHint">@color/textColorGray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/textColorGray</item>
        <item name="colorControlActivated">@color/textColorBlack</item>
    </style>
    <style name="EditTextStyle" parent="Theme.AppCompat.DayNight">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/textColorLightBlack</item>
        <item name="colorControlNormal">@color/GrayColor</item>
        <item name="colorControlActivated">@color/textColorLightBlack</item>
        <item name="colorControlHighlight">@color/textColorLightBlack</item>
    </style>

    <style name="TextStyleNormal" parent="Theme.AppCompat.DayNight">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>
    <style name="TextStyleSemiBold" parent="Theme.AppCompat.DayNight">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>
    <style name="TextStyleLight" parent="Theme.AppCompat.DayNight">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>
    <style name="TextStyleMedium" parent="Theme.AppCompat.DayNight">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>
    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
